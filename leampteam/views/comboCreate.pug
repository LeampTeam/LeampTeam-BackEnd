extends layout

block content
    .container-fluid.contenedor.contenedorVista
        .card
            .card-header
                .row
                    .col-md-10
                        h4 Crear Combo
                    .col-md-2
                        a.btn.btn-light(type='button' href='/combo/grilla') 
                            i.fas.fa-arrow-left
                             | Volver
            .card-body
                form(action = "/combo/create", method = "POST")
                    .form-group
                        label(for='exampleInputEmail1') Nombre
                        input#exampleInputEmail1.form-control(type='text' aria-describedby='emailHelp' placeholder='Enter email' name='name' value= combo!=''?combo.name:'')
                    .form-group
                        label(for='exampleInputEmail1') Descripcion
                        input#exampleInputEmail1.form-control(type='text' aria-describedby='emailHelp' placeholder='Enter email' name='description' value= combo!=''?combo.description:'')
                    .form-group
                        label(for='exampleInputEmail1') Codigo
                        input#exampleInputEmail1.form-control(type='number' aria-describedby='emailHelp' placeholder='Enter email' name='code' value= combo!=''?combo.code:'')
                    .form-group
                        label(for='exampleInputEmail1') Stock
                        input#exampleInputEmail1.form-control(type='number' aria-describedby='emailHelp' placeholder='Enter email' name='stock' value= combo!=''?combo.stock:'')
                    .form-group
                        label(for='exampleInputEmail1') Precio
                        input#exampleInputEmail1.form-control(type='number' aria-describedby='emailHelp' placeholder='Enter email' name='price' value= combo!=''?combo.price:'')
                    .form-group
                        label(for='exampleInputEmail1') Productos
                        br
                        select.selectpicker(multiple='' data-live-search="true")
                         option(value=0) Selecione una fragancia
                            each val in productos
                                option(value=val._id) #{val.description}  
                    button.btn.btn-primary(type='submit') Submit
                    p(style='color:red') #{message}