extends layout

block content
  .container-fluid.contenedor.contenedorVista
    .card
      .card-header
        .row
          .col-md-10
            h4 Lista de Productos
          .col-md-2
            a.btn.btn-light(type='button' href='/producto/create')
             i.fas.fa-plus-square 
              | Crear Producto
      .card-body
        table#example.display(style='width:100%')
          thead
            tr
              th Id
              th Codigo
              th Nombre
              th Marca
              th Descripcion
              th Precio
              th Stock
              th Acciones      
          tfoot
            tr
              th Id
              th Codigo
              th Nombre
              th Marca
              th Descripcion
              th Precio
              th Stock
              th Acciones            
  script(src="/javascripts/datatableProducto.js")