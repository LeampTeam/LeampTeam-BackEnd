extends layout

block content
  .container-fluid.contenedor.contenedorVista
    .card
      .card-header
        .row
          .col-md-10
            h4 Lista de Combos
          .col-md-2
            a.btn.btn-light(type='button' href='/combo/create')
             i.fas.fa-plus-square 
              | Crear Combo
      .card-body
        table#example.display(style='width:100%')
          thead
            tr
              th Id
              th Productos
              th Codigo
              th Descripcion
              th Precio
              th Stock
              th Acciones      
          tfoot
            tr
             th Id
             th Productos
             th Codigo
             th Descripcion
             th Precio
             th Stock
             th Acciones                
  script(src="/javascripts/datatableCombo.js")